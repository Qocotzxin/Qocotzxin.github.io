{
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {
    "react": {
      "createClass": "createReactClass",
      "pragma": "React",
      "version": "16.5.2",
      "flowVersion": "0.53"
    },
    "propWrapperFunctions": ["forbidExtraProps"]
  },
  "globals": {
    "document": false
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": 2,
    "array-bracket-spacing": ["error"],
    "object-curly-spacing": ["error", "always"]
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"]
}
